{
  "id": null,
  "uid": "webshop_dashboard",
  "title": "Webshop Dashboard",
  "time": {
    "from": "2019-09-01T00:00:00Z",
    "to": "2020-01-31T23:59:59Z"
  },
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Daily Aggregated Sales (Purchases Only)",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "rawSql": "SELECT event_time::date AS time, SUM(price) AS total_sales FROM webshop_activity_data WHERE $__timeFilter(event_time) AND event_type = 'purchase' GROUP BY event_time::date ORDER BY event_time::date;",
          "format": "time_series"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 10
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0
          },
          "unit": "currencyUSD"
        }
      },
      "options": {
        "tooltip": {
          "mode": "single",
          "value": {
            "prefix": "$",
            "suffix": ""
          }
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "xaxis": {
        "mode": "time",
        "name": "Date",
        "show": true
      },
      "yaxes": [
        {
          "format": "currencyUSD",
          "label": "Total Sales ($)",
          "logBase": 1,
          "show": true
        },
        {
          "format": "short",
          "label": "",
          "logBase": 1,
          "show": true
        }
      ],
      "timeRegions": []
    },
    {
      "type": "table",
      "title": "Top 10 Product Sales Contribution",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "rawSql": "SELECT product_id AS \"Product ID\", SUM(price) AS \"Total Sales\", (SUM(price) * 100.0 / SUM(SUM(price)) OVER ())::numeric(10, 2) AS \"Sales Percentage\", SUM(purchase_movement) AS \"Total Purchase Movement\", CASE WHEN SUM(purchase_movement) = 0 THEN 0 ELSE SUM(price) / SUM(purchase_movement) END AS \"Sales per Purchase Movement\" FROM webshop_activity_data WHERE event_type = 'purchase' GROUP BY product_id ORDER BY \"Total Sales\" DESC LIMIT 10;",
          "format": "table"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 8
      },
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Total Sales"
            },
            "properties": [
              {
                "id": "unit",
                "value": "currencyUSD"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Sales Percentage"
            },
            "properties": [
              {
                "id": "unit",
                "value": "percent"
              },
              {
                "id": "decimals",
                "value": 2
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Sales per Purchase Movement"
            },
            "properties": [
              {
                "id": "unit",
                "value": "currencyUSD"
              }
            ]
          }
        ]
      }
    }
  ],
  "schemaVersion": 30,
  "version": 1
}